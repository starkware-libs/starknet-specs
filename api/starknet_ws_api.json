{
  "openrpc": "1.0.0-rc1",
  "info": {
    "version": "0.7.1",
    "title": "StarkNet WebSocket PRC API",
    "license": {}
  },
  "methods": [
    {
      "name": "starknet_subscribe",
      "summary": "Open a new websocket subscription",
      "description": "Creates a websocket stream which will fire events of the requested subscription type. Only available for websocket connections.",
      "params": [
        {
          "name": "subscription ID",
          "summary": "The subscription to close",
          "required": true,
          "schema": {
            "$ref": "#/components/schemas/SUBSCRIPTION_REQUEST"
          }
        }
      ],
      "result": {
        "name": "subscription ID",
        "description": "An identifier for this subscription stream used to associate events with this subscription.",
        "schema": {
          "type": "integer"
        }
      },
      "errors": []
    },
    {
      "name": "starknet_unsubscribe",
      "summary": "Closes a websocket subscription",
      "description": "Close a previously opened ws stream, with the corresponding subscription ID",
      "params": [
        {
          "name": "subscription ID",
          "summary": "The subscription to close",
          "required": true,
          "schema": {
            "type": "integer"
          }
        }
      ],
      "result": {
        "name": "Unsubscription result",
        "description": "True if the unsubscription was successful",
        "schema": {
          "type": "boolean"
        }
      }
    },
    {
      "name": "starknet_subscription",
      "summary": "A subscription event notification sent by the node.",
      "params": [],
      "result": {
        "name": "Subscription event",
        "schema": {
          "type": "object",
          "properties": {
            "subscription": {
              "name": "Subscription ID",
              "summary": "The subscription this event is for",
              "type": "integer"
            },
            "event": {
              "$ref": "#/components/schemas/SUBSCRIPTION_EVENT"
            }
          },
          "required": ["subscription", "event"]
        }
      },
      "errors": [
        {
          "$ref": "#/components/errors/WEBSOCKET_SUBSCRIPTION_CLOSED"
        }
      ]
    }
  ],

  "components": {
    "schemas": {
      "FELT": {
        "$ref": "./api/starknet_api_openrpc.json#/components/schemas/FELT"
      },
      "BLOCK_STATUS": {
        "title": "Block syncing status",
        "type": "object",
        "properties": {
          "starting_block": {
            "type": "integer"
          },
          "current_block": {
            "type": "integer"
          },
          "highest_block": {
            "type": "integer"
          }
        }
      },
      "SYNCING_STATUS": {
        "title": "Node syncing status",
        "type": "object",
        "properties": {
          "syncing": {
            "type": "boolean"
          },
          "status": {
            "$ref": "#/components/schemas/BLOCK_STATUS"
          }
        }
      },

      "SUBSCRIPTION_EVENT": {
        "title": "Subscription event",
        "oneOf": [
          {
            "$ref": "./api/starknet_api_openrpc.json#/components/schemas/BLOCK_HEADER"
          },
          {
            "$ref": "#/components/schemas/SYNCING_STATUS"
          }
        ]
      },
      "SUBSCRIPTION_REQUEST": {
        "schema": {
          "oneOf": [
            {
              "name": "newHeads",
              "summary": "Receive new block headers",
              "type": "array",
              "items": {
                "schema": {
                  "type": "string",
                  "enum": ["newHeads"]
                }
              }
            },
            {
              "name": "syncing",
              "summary": "Receive information on the node syncing state",
              "schema": {
                "type": "string",
                "enum": ["syncing"]
              }
            },
            [
              {
                "name": "events",
                "summary": "Subscribe to Starknet events by address and key",
                "required": true,
                "schema": {
                  "type": "string",
                  "enum": ["events"]
                }
              },
              {
                "name": "address",
                "summary": "The from_address to filter events by",
                "required": false,
                "schema": {
                  "$ref": "#/components/schemas/FELT"
                }
              },
              {
                "name": "keys",
                "summary": "The keys to filter events by",
                "required": false,
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/FELT"
                  }
                }
              }
            ]
          ]
        }
      }
    },
    "errors": {
      "WEBSOCKET_SUBSCRIPTION_CLOSED": {
        "code": -32099,
        "message": "Websocket subscription closed",
        "data": {
          "type": "object",
          "description": "More data about the execution failure",
          "properties": {
            "id": {
              "title": "Subscription ID",
              "description": "The ID of the closed subscription",
              "type": "integer"
            },
            "reason": {
              "title": "Closing reason",
              "description": "The reason why the subscription was closed",
              "type": "string"
            }
          },
          "required": ["id", "reason"]
        }
      }
    }
  }
}
